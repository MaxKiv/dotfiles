{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 40, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 3, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
      "sway/workspaces",
      "sway/mode",
      "sway/scratchpad",
      "custom/media"
    ],
    "modules-center": [
      "clock"
    ],
    "modules-right": [
      "mpd",
      "pulseaudio",
      "network",
      "battery",
      "tray",
      "power-profiles-daemon",
      "idle_inhibitor",
      "custom/power"
    ],
    // Modules configuration
    "sway/workspaces": {
        // "disable-scroll": true,
        "all-outputs": true,
        // "warp-on-scroll": false,
        // "format": "{name}: {icon}",
        // "format-icons": {
            // "1": "ÔÑ†",
            // "2": "Ôâ®",
            // "3": "ÔÑ°",
            // "4": "ÔÜº",
            // "5": "ÔÅµ",
            // "urgent": "ÔÅ™",
            // "focused": "ÔÜí",
            // "default": "ÔÑë"
        // }
    },
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
      "format": "{icon} {count}",
      "show-empty": false,
      "format-icons": ["", "Ôãí"],
      "tooltip": true,
      "tooltip-format": "{app}: {title}"
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons":
      {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    },
    "clock": {
        // https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
        "timezone": "Pacific/Auckland",
        "format": "{:%H:%M}",
        "format-alt": "{:%d/%m/%Y %A %H:%M %Z}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
          "mode"          : "year",
          "mode-mon-col"  : 3,
          "weeks-pos"     : "right",
          "on-scroll"     : 1,
          "format": {
            "months":     "<span color='#ffead3'><b>{}</b></span>",
            "days":       "<span color='#ecc6d9'><b>{}</b></span>",
            "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
            "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
            "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
          }
        },
        "on-click": "date | wl-copy",
        "on-click-right": "date | wl-copy"
    },
    "battery": {
      "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
      },
      "format": "{capacity}% {icon}",
      "format-full": "{capacity}% {icon}",
      "format-charging": "{capacity}% Ôá¶",
      "format-plugged": "{capacity}% Ôá¶",
      "format-alt": "{time} {icon}",
      "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
      "signal": 8,
      "interval": 30
      // "format-good": "", // An empty format will hide the module
      // "format-full": "",
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "signal": 8, // note this seems to be broken on non-custom modules?
      "interval": 30,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´    {essid} ({signalStrength}%)",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% Ôäî {format_source}",
        "format-bluetooth-muted": "üîá Ôäî {format_source}",
        "format-muted": "0% üîá {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
          "headphone": "ÔÄ•",
          "hands-free": "üìª",
          "headset": "üéß",
          "phone": "ÔÇï",
          "portable": "ÔÇï",
          "car": "ÔÜπ",
          "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "mpd": {
      "tooltip": false,
      "format": "{stateIcon} {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
      "format-disconnected": "X",
      "format-stopped": "‚èπ",
      "state-icons": {
        "playing": "ÔÅã",
        "paused": "ÔÅå"
      },
      "on-click": "rmpc togglepause",
      "on-click-right": "rmpc next"
    },
    "custom/media": {
      "format": "{icon} {text}",
      "return-type": "json",
      "max-length": 40,
      "format-icons": {
        "spotify": "ÔÜº",
        "default": "üéú"
      },
      "escape": true,
      "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
      "format" : " ‚èª ",
      "tooltip": false,
      "menu": "on-click",
      "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
      "menu-actions": {
        "shutdown": "systemctl poweroff",
        "reboot": "systemctl reboot",
        "suspend": "systemctl suspend",
        "hibernate": "systemctl hibernate"
      }
    }
}
