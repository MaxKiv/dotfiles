# Modifier key (Mod1 = Alt, Mod4 = Meta)
set $mod Mod4

# Movement keys
set $left h
set $down j
set $up k
set $right l

# Terminal
set $term env alacritty

# Swaylock
set $swaylock swaylock-fancy -p -f "Hasklug-Nerd-Font-Mono"

# Menu
set $run-menu wofi --show drun --prompt search
set $emoji-menu wofi-emoji

# File explorer
set $file-explorer alacritty -e yazi

# Process viewer 
set $top alacritty -e zenith

# System Config
set $system-config alacritty -e zellij attach nix

# Notes
set $notes alacritty -e zellij attach note

# Browser
set $browser firefox

# Output names
set $monitor eDP-1

# Workspace names
set $workspace1 1
set $workspace2 2
set $workspace3 3
set $workspace4 4
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9
set $workspace10 10

# Backgrounds
output $monitor bg /home/max/git/nix/assets/backgrounds/porthole.jpg fill

# Positioning & Refresh Rate
# output $monitor resolution 1536x864 position 0,0
output $monitor resolution 1920x1080@60Hz position 0,0

